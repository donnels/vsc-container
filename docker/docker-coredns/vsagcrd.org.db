$ORIGIN vsagcrd.org.
$TTL 300

@               IN  SOA coredns.vsagcrd.org. admin.vsagcrd.org. (
                    2025081001 ; serial
                    3600       ; refresh
                    1800       ; retry
                    1209600    ; expire
                    300        ; minimum
                )

; DNS server
                IN  NS  coredns.vsagcrd.org.

; Service records
coredns         IN  A   172.20.0.10
proxy           IN  A   172.20.0.11
vscode          IN  A   172.20.0.12
certbot         IN  A   172.20.0.13

; CNAME aliases for services
dns             IN  CNAME coredns.vsagcrd.org.
code-server     IN  CNAME vscode.vsagcrd.org.
cert-generator  IN  CNAME certbot.vsagcrd.org.

; Main service endpoints
www             IN  CNAME proxy.vsagcrd.org.
code            IN  CNAME vscode.vsagcrd.org.
