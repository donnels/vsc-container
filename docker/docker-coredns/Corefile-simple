. {
    # Forward all external DNS queries to public DNS servers
    forward . 8.8.8.8 1.1.1.1
    
    # Enable caching
    cache 30
    
    # Enable error logging
    errors
    
    # Enable health check endpoint
    health {
        lameduck 5s
    }
    
    # Enable metrics
    prometheus :9153
}

# Internal vsagcrd.org domain resolution using simple hosts file
# This automatically provides BOTH forward and reverse DNS
vsagcrd.org {
    hosts /etc/coredns/simple-hosts {
        ttl 300
        reload 5s
        fallthrough
    }
    
    log
    errors
}

# Reverse DNS is handled automatically by the hosts plugin
# PTR records are auto-generated from the hosts file entries
