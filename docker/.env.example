# Warp Bubble Environment Configuration
# Copy this file to .env and customize the values
# 
# Base Images Used:
# - locator-matrix: Debian stable-slim + CoreDNS binary
# - diagnostic-array: Debian stable-slim
# - engineering-console: Ubuntu (code-server base)
# - deflector: Debian stable-slim  
# - shuttlebay: Debian (nginx:latest base)
# - transporter: Ubuntu (ubuntu/squid base)
# - transporter-test: Ubuntu (ubuntu/squid base)
# - console: Debian (nginx:latest base)
# - optical-data-network: Alpine (eclipse-mosquitto base)

# Domain Configuration
WARP_DOMAIN=warp.vsagcrd.org
BASE_DOMAIN=vsagcrd.org

# Network Configuration
WARPBUBBLE_NETWORK_SUBNET=172.20.0.0/16

# Individual Service IP Addresses (for Docker Compose)
WARPBUBBLE_IP_LOCATOR_MATRIX=172.20.0.2
WARPBUBBLE_IP_DIAGNOSTIC_ARRAY=172.20.0.3
WARPBUBBLE_IP_ENGINEERING_CONSOLE=172.20.0.10
WARPBUBBLE_IP_DEFLECTOR=172.20.0.20
WARPBUBBLE_IP_SHUTTLEBAY=172.20.0.30
WARPBUBBLE_IP_TRANSPORTER=172.20.0.40
WARPBUBBLE_IP_TRANSPORTER_TEST=172.20.0.41
WARPBUBBLE_IP_CONSOLE=172.20.0.50
WARPBUBBLE_IP_OPTICAL_DATA_NETWORK=172.20.0.60

# Compact Service Definitions (for CoreDNS hosts file generation)
# Format: service-name:alias-name (alias optional)
WARPBUBBLE_SERVICES=locator-matrix:dns,diagnostic-array,engineering-console:vscode,deflector,shuttlebay,transporter,transporter-test,console,optical-data-network:odn

# Service Ports
WARPBUBBLE_PORT_LOCATOR_MATRIX=53
WARPBUBBLE_PORT_LOCATOR_MATRIX_TCP=53
WARPBUBBLE_PORT_SHUTTLEBAY=8080
WARPBUBBLE_PORT_TRANSPORTER=3128
WARPBUBBLE_PORT_TRANSPORTER_TEST=3129
WARPBUBBLE_PORT_CONSOLE=8081

# Certificate Configuration
CERT_HOSTNAMES=code-dev.vsagcrd.org localhost 127.0.0.1
VSCODE_CERT_NAME=vscode
PASSWORD=vscode
CODE_SERVER_PASSWORD_HASH=
CODE_SERVER_AUTH_MESSAGE=
VIRTUAL_HOST=
NGINX_LOG_PATH=

# Certificate Domains
WEB_DOMAINS=
WEB_CERT_NAME=
VSCODE_DOMAINS=
CONSOLE_DOMAINS=
CONSOLE_CERT_NAME=

# Certificate Generation Flags
GENERATE_WEB_CERT=false
GENERATE_VSCODE_CERT=false
GENERATE_CONSOLE_CERT=false
GENERATE_PROXY_CERT=false

# Cloudflare Configuration (for automatic certificates)
DOMAIN=
CLOUDFLARE_API_TOKEN=
