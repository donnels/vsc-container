. {
    # Auto-detect local DNS from system configuration
    # This will use Fritz Box (10.251.2.1) when home, mobile DNS when traveling
    forward . /etc/resolv.conf
    
    # Enable caching
    cache 30
    
    # Enable error logging
    errors
    
    # Enable health check endpoint
    health {
        lameduck 5s
    }
    
    # Enable metrics
    prometheus :9153
}

# Internal vsagcrd.org domain using simple hosts file
# This automatically provides BOTH forward and reverse DNS
vsagcrd.org {
    hosts /etc/coredns/hosts {
        ttl 300
        reload 5s
        fallthrough
    }
    
    log
    errors
}

# Reverse DNS is handled automatically by the hosts plugin
# PTR records are auto-generated from the hosts file entries
